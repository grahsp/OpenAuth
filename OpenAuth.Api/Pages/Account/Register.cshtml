@page
@model OpenAuth.Api.Pages.Account.Register
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Sign Up";
}

<!DOCTYPE html>

<html lang="en">
<head>
    <title>@ViewData["Title"]</title>
</head>
<body>
<h1>Create Account</h1>
<p class="subtitle">Join us today and get started in seconds</p>

<div asp-validation-summary="ModelOnly" class="error-message"></div>

<form method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Input.Username">Username</label>
        <input asp-for="Input.Username" placeholder="Choose a username" autofocus/>
        <span asp-validation-for="Input.Username" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.Email">Email Address</label>
        <input asp-for="Input.Email" placeholder="user@example.com"/>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.Password">Password</label>
        <input asp-for="Input.Password" placeholder="Min. 8 characters"/>
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.ConfirmPassword">Confirm Password</label>
        <input asp-for="Input.ConfirmPassword" placeholder="Re-enter your password"/>
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="ReturnUrl"/>

    <button type="submit">Create Account</button>
</form>

<div class="footer">
    <p>Already have an account?<a asp-page="/account/login" asp-route-returnUrl="@Model.ReturnUrl">Sign In</a></p>
</div>

@section Scripts {
    <partial name="_ValidationScripts" />
}
</body>
</html>